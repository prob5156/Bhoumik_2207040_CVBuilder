<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="467.0" prefWidth="680.0" styleClass="cv-container" stylesheets="@styless.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cvbuilder1.controller.ListController">

    <top>
        <Label styleClass="cv-title" text="Saved CV Records" />
    </top>

    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <ListView fx:id="cvList" prefHeight="200.0" prefWidth="200.0" />
            <Label fx:id="status" text="Loading..." />
            <GridPane hgap="10.0" styleClass="cv-grid" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25.0" />
                    <ColumnConstraints percentWidth="75.0" />
                </columnConstraints>
                <Label text="Name:" GridPane.rowIndex="0" />
                <TextField fx:id="tfName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Email:" GridPane.rowIndex="1" />
                <TextField fx:id="tfEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button onAction="#a" styleClass="cv-button" text="Back to Home" />
            <Button onAction="#b" styleClass="cv-button" text="Update Name/Email" />
            <Button onAction="#c" styleClass="cv-button" text="Delete Selected CV" />
        </HBox>
    </bottom>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
