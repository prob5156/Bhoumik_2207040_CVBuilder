<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cvbuilder1.controller.CvController">

    <top>
        <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-padding: 20;" text="Create Your CV" />
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" style="-fx-padding: 20;">
                <GridPane hgap="15" vgap="15">

                    <columnConstraints>
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="75" />
                    </columnConstraints>

                    <!-- Personal Info -->
                    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="tfName" prefHeight="26.0" prefWidth="324.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="tfEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="tfPhone" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="tfAddress" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Summary -->
                    <Label text="Summary:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextArea fx:id="taSummary" prefHeight="70.0" prefRowCount="3" prefWidth="368.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <!-- Education -->
                    <Label text="Education:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextArea fx:id="taEducation" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <!-- Experience -->
                    <Label text="Experience:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <TextArea fx:id="taExperience" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <!-- Skills -->
                    <Label text="Skills:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                    <TextArea fx:id="taSkills" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="7" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>

                </GridPane>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-padding: 20;">
            <Button onAction="#goBack" text="Back" />
            <Button onAction="#previewCv" text="Preview" />
            <Button onAction="#saveCv" text="Save CV" />
        </HBox>
    </bottom>

</BorderPane>
