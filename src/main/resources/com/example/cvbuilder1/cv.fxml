<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="712.0" prefWidth="680.0" styleClass="cv-container" stylesheets="@styless.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cvbuilder1.controller.CvController">

    <top>
        <Label styleClass="cv-title" text="Create Your CV" />
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20">
                <GridPane hgap="15" styleClass="cv-grid cv-input" vgap="15">

                    <columnConstraints>
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="75" />
                    </columnConstraints>

                    <Label text="Full Name:" GridPane.rowIndex="0" />
                    <TextField fx:id="tfName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Email:" GridPane.rowIndex="1" />
                    <TextField fx:id="tfEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Phone:" GridPane.rowIndex="2" />
                    <TextField fx:id="tfPhone" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Address:" GridPane.rowIndex="3" />
                    <TextField fx:id="tfAddress" prefWidth="404.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Summary:" GridPane.rowIndex="4" />
                    <TextArea fx:id="taSummary" prefHeight="95.0" prefWidth="468.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Education:" GridPane.rowIndex="5" />
                    <TextArea fx:id="taEducation" prefHeight="102.0" prefWidth="468.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <Label text="Experience:" GridPane.rowIndex="6" />
                    <TextArea fx:id="taExperience" prefHeight="92.0" prefWidth="458.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <Label text="Skills:" GridPane.rowIndex="7" />
                    <TextArea fx:id="taSkills" prefHeight="98.0" prefWidth="468.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>

                </GridPane>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Button onAction="#goBack" styleClass="cv-button" text="Back" />
            <Button onAction="#previewCv" styleClass="cv-button" text="Preview" />
            <Button onAction="#saveCv" styleClass="cv-button" text="Save CV" />
        </HBox>
    </bottom>

</BorderPane>
