<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cvbuilder1.controller.PreviewController">

    <VBox prefHeight="742.0" prefWidth="851.0" spacing="20" style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

        <!-- Name Card -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 4); -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label fx:id="lblName" style="-fx-font-size: 34px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <VBox spacing="5">
                <Label fx:id="lblEmail" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                <Label fx:id="lblPhone" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                <Label fx:id="lblAddress" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
            </VBox>
        </VBox>

        <!-- Summary Card -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6, 0, 0, 3); -fx-border-radius: 8; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1abc9c;" text="SUMMARY" />
            <Label fx:id="lblSummary" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" wrapText="true" />
        </VBox>

        <!-- Education Card -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6, 0, 0, 3); -fx-border-radius: 8; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1abc9c;" text="EDUCATION" />
            <Label fx:id="lblEducation" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" wrapText="true" />
        </VBox>

        <!-- Experience Card -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6, 0, 0, 3); -fx-border-radius: 8; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1abc9c;" text="EXPERIENCE" />
            <Label fx:id="lblExperience" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" wrapText="true" />
        </VBox>

        <!-- Skills Card -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6, 0, 0, 3); -fx-border-radius: 8; -fx-background-radius: 8;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1abc9c;" text="SKILLS" />
            <Label fx:id="lblSkills" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" wrapText="true" />
        </VBox>

        <!-- Back Button -->
        <Button onAction="#goBack" style="-fx-padding: 10 25; -fx-font-size: 16px; -fx-background-color: #1abc9c; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Back" />

    </VBox>
</ScrollPane>
