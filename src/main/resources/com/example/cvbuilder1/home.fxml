<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cvbuilder1.controller.HomeController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 40;">

    <Label text="Welcome to CV Builder"
           style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <Button text="Create CV"
            fx:id="btnCreate"
            onAction="#openCvBuilder"
            style="-fx-font-size: 18px; -fx-padding: 10 20;" />

</VBox>
